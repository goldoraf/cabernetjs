require "rake-pipeline-web-filters"
require "uglifier"
require "less"
require "json"

output "dist"

input "src" do
  match "main.js" do
    neuter(
      "cabernet.js",
      :additional_dependencies => proc { |input|
        Dir.glob(File.join(File.dirname(input.fullpath),'**','*.js'))
      },
      :path_transform => proc { |path, input|
        "#{path}.js"
      },
      :closure_wrap => true
    ) 
  end
end

input "tests/src" do
  match "**/*.js" do
    concat "cabernet-tests.js"
  end
end

input "dist" do
  match "cabernet.js" do
    uglify { "cabernet.min.js" }
  end
end

output "tests"

input "tests/less" do
    match "basic.less" do
        less :paths => ['tests/less', 'tests/vendor']
        copy "css/basic.css"
    end
end

